<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeVT.Views.ToolsPage">
    <ContentPage.Content>
        <StackLayout Padding="15">


            <Label Text="{Binding AccelerometerData}"/>
            <Button Text="Accelerometer On/Off!"
                VerticalOptions="CenterAndExpand"
                Clicked="ToggleAccelerometer" />

            <Label Text="{Binding Gyrodata}"/>
            <Button Text="GyroScope On/Off!"
                VerticalOptions="CenterAndExpand"
                Clicked="ToggleGyroscope" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>